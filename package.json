{
  "name": "@map-colonies/cia",
  "version": "0.1.0",
  "description": "Central IDs allocation service",
  "main": "index.ts",
  "scripts": {
    "test:unit": "jest --coverage --testPathPattern=\"./src/tests/unit/.*.spec.ts\" --reporters='default' --reporters='jest-html-reporters' --watchAll=false",
    "test:integration": "jest --testPathPattern=\"./src/tests/integration/.*.spec.ts\"",
    "lint": "eslint *.ts src/**",
    "lint:fix": "eslint --fix *.ts src/**",
    "release": "standard-version",
    "test": "npm run lint && npm run test:unit && npm run test:integration",
    "build": "npm run clear && tsc --project tsconfig.build.json && copyfiles ./docs ./config dist",
    "clear": "rimraf dist",
    "start": "npm run build && node ./dist/index.js",
    "confd": "node ./confd/generate-config.js",
    "confd:prod": "node ./confd/generate-config.js --environment production",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "typeorm:create": "npm run typeorm migration:create -- -n",
    "typeorm:migrate": "npm run build && npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run",
    "typeorm:revert": "npm run typeorm migration:revert"
  },
  "directories": {
    "test": "tests"
  },
  "author": {
    "name": "MapColonies",
    "email": "mapcolonies@gmail.com",
    "url": "https://github.com/MapColonies"
  },
  "license": "ISC",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^10.0.0",
    "@map-colonies/eslint-config": "^1.1.0",
    "@types/config": "0.0.36",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/is-uuid": "^1.0.0",
    "@types/jest": "^26.0.12",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.9",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.9.0",
    "@typescript-eslint/parser": "^4.9.0",
    "commitlint": "^9.1.2",
    "copyfiles": "^2.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.8.1",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-create-mock-instance": "^1.1.0",
    "jest-html-reporters": "^2.0.3",
    "rimraf": "^3.0.2",
    "standard-version": "^9.0.0",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.1.1",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "@map-colonies/mc-logger": "^1.2.1",
    "@map-colonies/mc-model-types": "^1.0.1",
    "@map-colonies/mc-probe": "^1.0.0",
    "body-parser": "^1.19.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "http-status-codes": "^2.1.2",
    "is-uuid": "^1.0.2",
    "lodash": "^4.17.20",
    "openapi-validator-middleware": "^3.1.1",
    "pg": "^8.5.1",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.4",
    "tsyringe": "^4.3.0",
    "typeorm": "^0.2.29",
    "yamljs": "^0.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageReporters": [
      "text",
      "html"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@map-colonies/eslint-config/ts-base"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  }
}
